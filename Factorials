//This program finds the factorial of an integer//
import java.util.Scanner;
public class Factorials {
    public static void main(String args[]) {
        Scanner keyboard=new Scanner(System.in);
        System.out.println("Enter integer that you want to calculate the factorial.");
        long num=keyboard.nextInt();
        int i=1;
        long factor=1;
        while(i<=num){
           factor=factor*i;
            i++;
        }
        
     

       System.out.println("The number you entered: "+ num);
       System.out.println("The factorial of "+num +" is " +factor);
    }
}
